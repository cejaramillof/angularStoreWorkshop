{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext", // differential loading
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015", // differential loading
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
